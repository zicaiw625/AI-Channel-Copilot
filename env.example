SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_APP_URL=
SCOPES=read_orders,read_customers,read_products,write_orders,read_checkouts
DATABASE_URL="postgresql://user:password@localhost:5432/ai_channel_copilot_db"

# Billing Configuration
ENABLE_BILLING=true
BILLING_PLAN_NAME="AI Copilot Pro"
BILLING_PRICE=29
BILLING_CURRENCY=USD
BILLING_TRIAL_DAYS=14
BILLING_INTERVAL=EVERY_30_DAYS
# BILLING_FORCE_TEST=true # Uncomment to force test charge mode in development

# Feature Flags & Limits
DEMO_MODE=false
DEFAULT_RANGE_KEY=30d
MAX_BACKFILL_ORDERS=1000
MAX_BACKFILL_DAYS=90
DATA_RETENTION_MONTHS=6
BACKFILL_TAGGING_BATCH_SIZE=25
MAX_BACKFILL_DURATION_MS=5000

# Background Jobs (1=Enabled, 0=Disabled)
ENABLE_BACKFILL_SWEEP=1
ENABLE_RETENTION_SWEEP=1

# Debug Panels (默认隐藏，仅开发调试时启用)
# SHOW_DEBUG_PANELS=true

# Redis Configuration (Optional - for distributed rate limiting)
# If not configured, falls back to in-memory rate limiting
# REDIS_URL=redis://localhost:6379
# Or configure separately:
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0
# REDIS_KEY_PREFIX=ratelimit:
# REDIS_CONNECT_TIMEOUT=5000
# REDIS_MAX_RETRIES=3

# Security (Optional)
# CSP Violation Reporting - collect CSP violations for security monitoring
# Example: Sentry CSP endpoint or custom logging endpoint
# CSP_REPORT_URI=https://your-sentry-project.ingest.sentry.io/api/xxx/security/?sentry_key=xxx

# Database Performance Monitoring (Optional)
# Slow query threshold in milliseconds (default: 500ms)
# SLOW_QUERY_THRESHOLD_MS=500
# Critical slow query threshold for alerts (default: 3000ms)
# CRITICAL_QUERY_THRESHOLD_MS=3000
# Maximum number of slow query records to keep (default: 1000)
# SLOW_QUERY_MAX_RECORDS=1000
# Enable verbose slow query logging with query details
# SLOW_QUERY_VERBOSE=false

# Observability (Optional)
# METRICS_WEBHOOK_URL=https://...
# METRICS_WEBHOOK_TOKEN=...
