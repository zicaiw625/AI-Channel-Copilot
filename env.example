SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_APP_URL=
SCOPES=read_orders,read_customers,read_products,write_orders,write_customers
DATABASE_URL="postgresql://user:password@localhost:5432/ai_channel_copilot_db"

# Billing Configuration
ENABLE_BILLING=true
BILLING_PLAN_NAME="AI Copilot Pro"
BILLING_PRICE=29
BILLING_CURRENCY=USD
BILLING_TRIAL_DAYS=14
BILLING_INTERVAL=EVERY_30_DAYS
# BILLING_FORCE_TEST=true # Uncomment to force test charge mode in development

# Feature Flags & Limits
DEMO_MODE=false
DEFAULT_RANGE_KEY=30d
MAX_BACKFILL_ORDERS=1000
MAX_BACKFILL_DAYS=90
DATA_RETENTION_MONTHS=6
BACKFILL_TAGGING_BATCH_SIZE=25
MAX_BACKFILL_DURATION_MS=5000

# Background Jobs (1=Enabled, 0=Disabled)
ENABLE_BACKFILL_SWEEP=1
ENABLE_RETENTION_SWEEP=1

# Debug Panels (默认隐藏，仅开发调试时启用)
# SHOW_DEBUG_PANELS=true

# Experimental Features (默认隐藏，如 llms.txt 功能)
# SHOW_EXPERIMENTAL_FEATURES=true

# Observability (Optional)
# METRICS_WEBHOOK_URL=https://...
# METRICS_WEBHOOK_TOKEN=...
